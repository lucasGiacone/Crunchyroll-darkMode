{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Crunchyroll DarkMode",
    "description": "DarkMode for Crunchyroll",
    "browser_action": {
   	 "default_title": "Crunchyroll DarkMode",
   	 "default_popup": "index.html",
   	 "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.crunchyroll.com/*"],
            "css": ["Cr-main.css"],
            "js": ["index.js"],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": ["*://*.crunchyroll.com/*"],
            "css": ["Cr-main.css"],
            "run_at": "document_end",
            "all_frames": true
        }
    ]
}